datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


generator dbml {
  provider = "prisma-dbml-generator"
}

model Admin {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model  Book{
  id    Int     @default(autoincrement()) @id
  title String  @unique
  author  String
  publisher  String
  year Int
  description String
  ISBN String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}