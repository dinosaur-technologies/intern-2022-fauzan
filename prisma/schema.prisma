datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


generator dbml {
  provider = "prisma-dbml-generator"
}

model Admin {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


model  Book{
  id    Int     @default(autoincrement()) @id
  title String  @unique
  author  String
  publisher  String
  year Int
  description String
  ISBN String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  phone_number String
  username  String
  password  String
}

model Loan {
  id    Int     @default(autoincrement()) @id
  // books    Book?   @relation(fields: [bookId], references: [id])
  // bookId  Int?
  // users    User?   @relation(fields: [userId], references: [id])
  // userId  Int?
  startDate DateTime
  returnDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}